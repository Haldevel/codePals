<div class="container">
  <div class="card-body"></div>

    <div class="card-header">
        <h3 >All Members</h3>

        <div class="row m-5">
          {{!-- Prints out Each user Info --}}
          {{#each users}}
            <div class="col-6">
            <div class="card">
              <img src={{photoLink}} alt="MemberPic" style="width:100%">
              <div class="container">
                <h3>{{firstName}} {{lastName}}</h3>
                <p> <strong>Skills: </strong>
                  {{!-- All user skills for each user --}}
                  {{#each skills}}
                  <ul>
                    <li>{{skill}} [ {{skillType}} ]</li>
                  </ul>
                  {{/each}}
                </p>
                <label>Email : <a href="mailto:"{{email}}>{{email}}</a></label>
                <p><button class="button btn-success" onclick="mailto:" {{email}}>Invite Member</button></p>
              </div>
               <br />
            </div>
            </div>
          {{/each}}
         
          {{!-- End of row --}}
        </div> 
        
    </div>
  </div>
</div>

