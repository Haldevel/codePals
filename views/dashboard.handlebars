<div class="container">
    <h1>Welcome {{firstName}} {{lastName}}</h1>
    <div class="card-body">

        <div class="card-header" style="color:rgb(19, 235, 152);">
            <div class="col-sm">
                <img src='./assets/images/dashImage.jpg' class="imgPort">
                <h3>My Projects</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Title</th>
                            <th scope="col">Type</th>
                            <th scope="col">Description</th>
                            <th scope="col">Interested?</th>
                            <th scope="col">Update</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each activities}}

                        <tr>
                            <td>{{estimateStartDate}}</td>
                            <td>{{title}} </td>
                            <td>{{actType}}</td>
                            <td>{{description}}</td>
                            <td>
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="customSwitch1">
                                    <label class="custom-control-label" for="customSwitch1">Interested?</label>
                                </div>
                            </td>
                            {{#if isMine}}
                            <td><button class="btn btn-primary">Update</button></td>
                            {{/if}}
                        </tr>


                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-header" style="color:rgb(25, 136, 94);">
            <div class="col-sm">
                <img src='./assets/images/dashImage.jpg' class="imgPort">
                <h3>Available Meetups</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Title</th>
                            <th scope="col">Type</th>
                            <th scope="col">Description</th>
                            <th scope="col">Interested?</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each activities}}
                        <tr>
                            <td>{{estimateStartDate}}</td>
                            <td>{{title}} </td>
                            <td>{{actType}}</td>
                            <td>{{description}}</td>
                            <td><button class="btn btn-success">Yes
                                </button>
                                <button class="btn btn-danger">No</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>